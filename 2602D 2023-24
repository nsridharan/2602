// ---- START VEXCODE CONFIGURED DEVICES ----
// Robot Configuration:
// [Name]               [Type]        [Port(s)]
// Controller1          controller                    
// ---- END VEXCODE CONFIGURED DEVICES ----

#include "vex.h"

using namespace vex;

// A global instance of competition
competition Competition;

// define your global instances of motors and other devices here
motor LeftRMotor = motor(PORT1, ratio6_1, true);
motor LeftFMotor = motor(PORT2, ratio6_1, true);
motor RightRMotor = motor(PORT3, ratio6_1, true);
motor RightFMotor = motor(PORT4, ratio6_1, true);
motor RightUPMotor = motor(PORT5, ratio6_1, false);
motor LeftUPMotor = motor(PORT8, ratio6_1, false);
motor IntakeMotor = motor(PORT7, ratio6_1, true);
motor CataMotor = motor(PORT7, ratio6_1, true);
controller Controller1 = controller(primary);

double rotationToFeet(double rotations) {

    const double feetPerRotation = 1.5; // To be adjusted 
    return rotations * feetPerRotation;
}
void displayAverageVelocityOnController(controller &controller) {
    double leftRPM = (LeftRMotor.velocity(rpm) + LeftFMotor.velocity(rpm)) / 2.0;
    double leftFPS = rotationToFeet(leftRPM) * 1 / 60; // Convert RPM to FPS
    double rightRPM = (RightRMotor.velocity(rpm) + RightFMotor.velocity(rpm)) / 2.0;
    double rightFPS = rotationToFeet(rightRPM) * 1 / 60; // Convert RPM to FPS
    double averageFPS = (leftFPS + rightFPS) / 2.0;
    controller.Screen.clearLine();
    controller.Screen.setCursor(1, 1);
    controller.Screen.print("Average FPS: %.2f", averageFPS);
}
void pre_auton(void) {
  // Initializing Robot Configuration. DO NOT REMOVE!
  vexcodeInit();
  // All activities that occur before the competition starts
  
}
void autonomous(void) {
   
}
void usercontrol(void) {
  while (1) {
    //Drivetrain Code
        double forward_backward = Controller1.Axis1.position(); 
        double turn = Controller1.Axis3.position(); 
        double left_speed = forward_backward + turn;
        double right_speed = forward_backward - turn;
        if (forward_backward != 0 && turn != 0) {
            if (turn > 0) {
                right_speed *= 0.7;
            } else {
                left_speed *= 0.7; 
            }
        }
        LeftFMotor.spin(vex::directionType::fwd, left_speed, vex::velocityUnits::pct);
        LeftRMotor.spin(vex::directionType::fwd, left_speed, vex::velocityUnits::pct);
        LeftUPMotor.spin(vex::directionType::fwd, left_speed, vex::velocityUnits::pct);
        RightFMotor.spin(vex::directionType::fwd, right_speed, vex::velocityUnits::pct);
        RightRMotor.spin(vex::directionType::fwd, right_speed, vex::velocityUnits::pct);
        RightUPMotor.spin(vex::directionType::fwd, right_speed, vex::velocityUnits::pct);

    displayAverageVelocityOnController(Controller1);

    //Intake Code
    if(Controller1.ButtonL1.pressing()){
      IntakeMotor.setVelocity(100,pct);
      IntakeMotor.spin(forward);
    }
    else if(Controller1.ButtonL2.pressing()){
      IntakeMotor.setVelocity(100,pct);
      IntakeMotor.spin(reverse);
    }
    else{
      IntakeMotor.stop();
    }
    wait(20, msec);
    //Cata Code 
    if(Controller1.ButtonR1.pressing()){
      IntakeMotor.setVelocity(100,pct);
      IntakeMotor.spin(reverse);
    }
    else if(Controller1.ButtonR2.pressing()){
      IntakeMotor.setVelocity(100,pct);
      IntakeMotor.spin(fwd);
    }
    else{
      IntakeMotor.stop();
    }
    
}
  }
// Main will set up the competition functions and callbacks.
int main() {
  // Set up callbacks for autonomous and driver control periods.
  Competition.autonomous(autonomous);
  Competition.drivercontrol(usercontrol);

  // Run the pre-autonomous function.
  pre_auton();

  // Prevent main from exiting with an infinite loop.
  while (true) {
    wait(100, msec);
  }
}
